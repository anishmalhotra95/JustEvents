<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/down">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:id="@+id/imageView2"
            android:maxWidth="400dp"
            android:scaleType="fitXY"
            />
        <TextView
            android:paddingTop="200dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:textSize="22dp"
            android:layout_below="@+id/imageView"
            android:id="@+id/Event_name2"
            android:text="Event Name:"/>
        <TextView
            android:paddingTop="200dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22dp"
            android:id="@+id/EventName2"
            android:layout_toRightOf="@+id/Event_name2"/>

        <TextView
            android:paddingTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:textSize="22dp"
            android:id="@+id/No.OfSeats2"
            android:layout_below="@+id/Event_name2"
            android:text="No.Of seats:"/>

        <Spinner
            android:paddingTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/No.OfSeats2"
            android:id="@+id/number"
            android:layout_below="@+id/Event_name2"

            />

        <Button
            android:paddingTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Book Now"
            android:gravity="center_vertical"
            android:id="@+id/booknow2"
            android:textSize="20dp"
            android:background="#01ffffff"
            android:layout_below="@+id/No.OfSeats2"
            android:layout_gravity="center"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
</LinearLayout>